<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/solid_top"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/RBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#747474"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text=">"
                    android:textColor="#100606"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/RTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:textColor="#D976A2"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <android.widget.Button
                    android:id="@+id/Review_delete_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#00ff0000"
                    android:paddingRight="10dp"
                    android:text="삭제"
                    android:textAlignment="textEnd"
                    android:textColor="#B3B3B3"
                    android:textSize="14dp" />

                <android.widget.Button
                    android:id="@+id/Review_modify_Btn"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:text="수정"
                    android:textColor="#B3B3B3"
                    android:textSize="14dp"
                    android:visibility="gone" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/reviewBoxClick"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/solid"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="100dp"
                    android:layout_height="175dp"
                    android:layout_gravity="center"
                    android:background="#FCFAF8"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/RImg"
                        android:layout_width="80dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="9dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <RatingBar
                            android:id="@+id/Rstars"
                            style="@style/starMiniRatingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:foregroundTint="#000000"
                            android:isIndicator="true"
                            android:max="5"
                            android:numStars="5"
                            android:rating="3"
                            android:stepSize="1"
                            tools:ignore="SpeakableTextPresentCheck" />

                        <TextView
                            android:id="@+id/Rstr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:ellipsize="end"
                            android:ems="20"
                            android:lineSpacingExtra="4sp"
                            android:maxLines="4"
                            android:textColor="#666666"
                            android:textSize="14dp" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#fafafa"
            android:orientation="vertical"
            android:visibility="visible"></LinearLayout>

    </LinearLayout>

</LinearLayout>