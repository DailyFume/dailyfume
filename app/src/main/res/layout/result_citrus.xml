<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/TestResultView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:fillViewport="false"
            android:scrollbarStyle="outsideOverlay"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_citrus">

                    <ImageView
                        android:id="@+id/ResultBackIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/result_back_bk" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/Ra"
                    android:layout_width="match_parent"
                    android:layout_height="145dp"
                    android:background="@drawable/testbackg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        android:lineSpacingExtra="3sp"
                        android:text="당신의 활기찬 성격만큼 발랄하고 톡톡튀는 매력적인 과일향을\n 좋아하시는 군요. 시트러스향은 감귤류의 향을 \n 말해요. 레몬, 라임, 베르가못, 오렌지 등의 \n 과일이랍니다. 오늘은 ‘시트러스’로 기분전환 어때요? "
                        android:textAlignment="center"
                        android:textColor="#666666"
                        android:textSize="12dp" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/result_line" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Rb"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:background="@drawable/testbackg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="추천 해시태그"
                        android:textColor="#4D4D4D"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.widget.Button
                            android:id="@+id/tag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#상큼한"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <android.widget.Button
                            android:id="@+id/tag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#프루티"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <android.widget.Button
                            android:id="@+id/tag3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#청량한"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <android.widget.Button
                            android:id="@+id/tag4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#라임향"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Rc"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/testbackg"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:text="이 향수를 추천드려요."
                        android:textColor="#333333"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/ResultViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="240dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Rd"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@drawable/testbackg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/send_kakao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/send_kakao" />

                        <ImageView
                            android:id="@+id/send_insta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/send_insta" />

                        <ImageView
                            android:id="@+id/send_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/send_url" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:text="공유하기"
                        android:textColor="#4D4D4D"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/ResultTopButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/topbuttonimg" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/bottom_bar"
            layout="@layout/bottom_bar_on_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>