<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/TestResultView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:fillViewport="false"
            android:scrollbarStyle="outsideOverlay"
            tools:ignore="SpeakableTextPresentCheck">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/testbackg"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/result_woody">

                    <Button
                        android:id="@+id/MoreResultsBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="20dp"
                        android:backgroundTint="#FFFFFF"
                        android:text="다른 결과 보기"
                        android:textColor="#8E8E8E"
                        tools:ignore="TextContrastCheck" />

                    <ImageView
                        android:id="@+id/ResultBackIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        app:srcCompat="@drawable/result_back_wh" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/Ra"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView24"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="50dp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="10sp"
                        android:text="이름 그대로 나무를 연상시키는 신선한 향을\n ‘우디’ 향이라고 합니다.\n \n  건조하면서도 고상한 베티베르계,\n 중후하면서도 부드럽고 섹시한 샌들우드계, 그 외에도\n 시더우드계, 파인 계 등이 우디계열의 주 향료로 쓰인답니다.\n 신록과 목재의 고상하고 안정된 느낌을 주는 이 계열의\n 향수에서는 따뜻하고 부드러운 분위기를 만끽할 수 있어요!\n \n   따뜻한 이미지에 주로 겨울에 많이 사용한답니다.\n 이번 겨울엔 따뜻한 느낌의 ‘우디’향으로\n 마음까지 따뜻해져 보는 건 어떨까요?\n"
                        android:textAlignment="center"
                        android:textColor="#666666"
                        android:textSize="14dp" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/result_line" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Rb"
                    android:layout_width="wrap_content"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:text="추천 해시태그"
                        android:textColor="#4D4D4D"
                        android:textSize="14dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <android.widget.Button
                            android:id="@+id/tag1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#우디"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <android.widget.Button
                            android:id="@+id/tag2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#숲속향"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <android.widget.Button
                            android:id="@+id/tag3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#따뜻한"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <android.widget.Button
                            android:id="@+id/tag4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/result_tag"
                            android:text="#부드러운"
                            android:textColor="#8C8B8B"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Rc"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView26"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="15dp"
                        android:text="이 향수를 추천드려요."
                        android:textColor="#333333"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <androidx.viewpager.widget.ViewPager
                        android:id="@+id/ViewPager"
                        android:layout_width="match_parent"
                        android:layout_height="240dp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Rd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/send_kakao"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/send_kakao" />

                        <ImageView
                            android:id="@+id/send_insta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/send_insta" />

                        <ImageView
                            android:id="@+id/send_url"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:srcCompat="@drawable/send_url" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/ResultTopButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/topbuttonimg" />

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/bottom_bar"
            layout="@layout/bottom_bar_on_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never" />

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>