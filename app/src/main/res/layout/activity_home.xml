<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout android:id="@+id/drawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0FFFFFFF"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/layout01"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/topBar"
                layout="@layout/top_bar_main1" />

            <android.widget.Button
                android:id="@+id/testGoButton2"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:layout_gravity="center"
                android:background="@drawable/round_4px"
                android:backgroundTint="#D77F8F"
                android:text="취향테스트 시작"
                android:textColor="#FFFFFF"
                android:textSize="24dp"
                android:textStyle="bold"
                android:visibility="gone"
                app:strokeWidth="1dp" />

            <ScrollView
                android:id="@+id/HomeSView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/testbackg"
                android:clipToPadding="false"
                android:fillViewport="false"
                android:scrollbarStyle="outsideOverlay"
                tools:ignore="SpeakableTextPresentCheck">

                <LinearLayout
                    android:id="@+id/LinearView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/top_b"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/top_b_02"
                        android:orientation="vertical">

                        <android.widget.Button
                            android:id="@+id/testGoButton"
                            android:layout_width="match_parent"
                            android:layout_height="67dp"
                            android:layout_alignParentLeft="false"
                            android:layout_alignParentRight="false"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="false"
                            android:background="@drawable/round_4px"
                            android:backgroundTint="#D77F8F"
                            android:text="취향테스트 시작"
                            android:textColor="#FFFFFF"
                            android:textSize="24dp"
                            android:textStyle="bold"
                            app:strokeWidth="1dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/SviewB"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/test_b"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="나에게 맞는 향수 찾기"
                                android:textColor="#747474"
                                android:textSize="20dp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="15dp"
                                android:orientation="horizontal">

                                <androidx.viewpager.widget.ViewPager
                                    android:id="@+id/ViewPager"
                                    android:layout_width="match_parent"
                                    android:layout_height="240dp" />
                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/mainProgressBar"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="380dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="10dp"
                                android:max="40"
                                android:progress="10"
                                android:progressTint="#D97CA5" />

                            <ImageView
                                android:id="@+id/moreBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="15dp"
                                app:srcCompat="@drawable/morebuttonimg" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/b_01"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/main_b_01" />

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Details"
                                android:textColor="#595959"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:id="@+id/fumeb01"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="333dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/storke_light"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/fume_pd_01"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        app:srcCompat="@drawable/main_b_fume_1" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/fume_01_brand"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="GUCCI"
                                            android:textColor="#D77F8F"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/fume_01_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="구찌 블룸 오 드 퍼퓸"
                                            android:textColor="#595959"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/storke_light"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView5"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/plusicon" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/fumeb02"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="333dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/storke_light"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/fume_pd_02"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        app:srcCompat="@drawable/main_b_fume_2" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/fume_02_brand"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="CHANNEL"
                                            android:textColor="#D77F8F"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/fume_02_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="샹스 오 땅드르 오 드 퍼퓸"
                                            android:textColor="#595959"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/storke_light"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/imageView6"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/plusicon" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/b_02"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="20dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/im1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/main_b_02" />

                            <TextView
                                android:id="@+id/te1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:text="Details"
                                android:textColor="#595959"
                                android:textSize="12dp" />

                            <LinearLayout
                                android:id="@+id/fumeb03"
                                android:layout_width="wrap_content"
                                android:layout_height="65dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="333dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="@drawable/storke_light"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/fume_pd_03"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="30dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        app:srcCompat="@drawable/main_b_fume_3" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="10dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/fume_03_brand"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="ACQUA DI PARMA"
                                            android:textColor="#04558A"
                                            android:textSize="12dp" />

                                        <TextView
                                            android:id="@+id/fume_03_title"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:text="미르토 디 파나레아 오드뚜왈렛"
                                            android:textColor="#595959"
                                            android:textSize="14dp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="80dp"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:background="@drawable/storke_light"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/im2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        app:srcCompat="@drawable/plusicon" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <ImageView
                            android:id="@+id/topButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="30dp"
                            app:srcCompat="@drawable/topbuttonimg" />

                        <LinearLayout
                            android:id="@+id/bottom_main"
                            android:layout_width="match_parent"
                            android:layout_height="150dp"
                            android:background="#FAFAFA"
                            android:gravity="center"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginRight="20dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="사업자: 비타민C   |   회원약관   |   개인정보처리방침"
                                    android:textSize="12dp" />

                                <TextView
                                    android:id="@+id/textView22"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:layout_weight="1"
                                    android:text="개인정보관리책임자: dailyfumec@gmail.com"
                                    android:textSize="12dp" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:text="해당 앱(데일리퓸)은 인터넷상에 이미 제공되어 있는 데이터만을 중심으로 정보를 제공하는 업체이므로 해당 정보에 대한 책임을 지지 않습니다."
                                android:textAlignment="center"
                                android:textSize="11dp" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="20dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textView18"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="10dp"
                                    android:text="DALIY FUME"
                                    android:textSize="12dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/textView17"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Copyright ⓒ2022 비타민C All Rights Reserved"
                                    android:textAlignment="center"
                                    android:textColor="#9A9A9A"
                                    android:textSize="12dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

            <include
                android:id="@+id/bottom_bar"
                layout="@layout/bottom_bar_on_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never" />

        </LinearLayout>
    </RelativeLayout>

    <!-- slide Layout-->
    <RelativeLayout
        android:id="@+id/dView"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:background="#ffffff"
        android:layout_gravity="start">

        <LinearLayout
            android:id="@+id/layout02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/topBar"
                layout="@layout/top_bar_slide" />

            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:fitsSystemWindows="true"
                app:itemIconTint="#E6B6BE"
                app:menu="@menu/main_menu">

            </com.google.android.material.navigation.NavigationView>

        </LinearLayout>

    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>